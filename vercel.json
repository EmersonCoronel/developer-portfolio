{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "src/build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/server.js" },
      { "src": "/(.*)", "dest": "/src/$1" }
    ]
  }
  